# Auto detect text files and perform LF normalization
* text=auto

# Declare files that will always have LF line endings on checkout
*.dart text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.gradle text eol=lf
*.properties text eol=lf
*.xml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.swift text eol=lf
*.kt text eol=lf
*.java text eol=lf
pubspec.* text eol=lf
analysis_options.* text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.bmp binary
*.ico binary
*.icns binary
*.jar binary
*.zip binary
*.pdf binary
*.mp4 binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Flutter/Dart/Pub related
.dart_tool/ linguist-generated=true
.flutter-plugins linguist-generated=true
.flutter-plugins-dependencies linguist-generated=true
.packages linguist-generated=true
build/ linguist-generated=true
pubspec.lock linguist-generated=true 